@model AlquilerVehiculoP2.Models.ViewModels.EmpleadosViewModel

@{
    ViewBag.Title = "Nuevo";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Nuevo", "Empleado", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            <div class="mt-3">
                @Html.LabelFor(d => d.Nombres)
                @Html.TextBoxFor(d => d.Nombres, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Nombres, null)
            </div>
            <div class="mt-3">
                @Html.LabelFor(d => d.Apellidos)
                @Html.TextBoxFor(d => d.Apellidos, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Apellidos, null)
            </div>
            <div class="mt-3">
                @Html.LabelFor(d => d.Direccion)
                @Html.TextBoxFor(d => d.Direccion, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Direccion, null)
            </div>
            <div class="mt-3">
                @Html.LabelFor(d => d.Telefono)
                @Html.TextBoxFor(d => d.Telefono, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Telefono, null)
            </div>
            <div class="mt-3">
                @Html.LabelFor(d => d.CorreoElectronico)
                @Html.TextBoxFor(d => d.CorreoElectronico, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.CorreoElectronico, null)
            </div>
            <div class="mt-3">
                @Html.LabelFor(d => d.FechaContrato) <br />
                @Html.EditorFor(d => d.FechaContrato, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.FechaContrato, null)
            </div>
            <br />
            <div>
                <input value="Guardar" class="btn btn-outline-dark" type="submit" />
                <a href="~/Empleado/Index" class="btn btn-outline-dark">Cancelar</a>
            </div>
        </div>
    </div>
}